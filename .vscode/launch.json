{
  "version": "0.1.0",
  "configurations": [
    {
      "name": "Paperclip",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}/libs/paperclip-vscode",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/libs/paperclip-vscode"
      ]
    },
    {
      "name": "Paperclip Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}/libs/paperclip-vscode",

      "args": [
        "${workspaceFolder}/libs/paperclip-vscode/src/test/all/fixtures",
        "--extensionDevelopmentPath=${workspaceFolder}/packages/paperclip-vscode",
        "--extensionTestsPath=${workspaceFolder}/packages/paperclip-vscode/lib/test"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/paperclip-vscode/lib/test/**/*-test.js"
      ]
    }
  ]
}
