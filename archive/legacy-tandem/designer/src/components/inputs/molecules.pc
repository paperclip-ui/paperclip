import "../atoms/view.pc" as imp0
import "./text/view.pc" as imp1
import "../../global.pc" as imp2
import "./button/view.pc" as imp3


/**
 * @bounds(left: 486, top: 306, right: 586, bottom: 354)
 */
public component LabeledInput {
  render div {
    style {
      width: 100%
      flex: 1
    }
    div element1 {
      style {
        margin-bottom: 2px
      }
      slot label {
        text text1 "Label" {
          style extends imp0.labelFont {
            margin-left: 2px
            margin-bottom: 0px
          }
        }
      }
    }
