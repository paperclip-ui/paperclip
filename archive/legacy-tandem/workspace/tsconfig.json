{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "strict": false /* Enable all strict type-checking options. */
  },
  "exclude": [
    "**/*.d.ts",
    "lib/**/*.d.ts",
    "esm",
    "native",
    "lib/**/*",
    "node_modules",
    "*-test",
    "index.d.ts",
    "browser.d.ts",
    "test",
    "examples"
  ],
  "filesGlob": ["./src/**/*.ts"]
}
