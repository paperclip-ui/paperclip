{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": ["es2015.promise", "dom", "es5", "esnext"]
  },
  "exclude": [
    "node_modules",
    "src-old",
    "src-old-del",
    "*-test",
    "lib",
    "index.d.ts",
    "test",
    "examples"
  ],
  "filesGlob": ["./src/**/*.ts"]
}
