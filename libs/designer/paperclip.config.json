{
  "srcDir": "src",
  "designsDir": "src/ui",
  "experimental": ["script", "condition", "repeat"],
  "moduleDirs": [],
  "lint": {
    "rules": {
      "enforceVars": [
        ["warning", "font-family", "color", "font-size", "padding", "margin"]
      ]
    }
  },
  "globalScripts": [
    "https://rsms.me/inter/inter.css",
    "src/ui/globals.css",
    "src/ui/custom-elements.js"
  ],
  "openCodeEditorCommandTemplate": "code --goto \"<file>:<line>:<column>\"",
  "compilerOptions": [
    {
      "emit": ["yew.rs:rs", "css", "react.js:js", "react.d.ts:d.ts"],
      "assetOutDir": "assets",
      "embedAssetMaxSize": -1
    }
  ]
}
