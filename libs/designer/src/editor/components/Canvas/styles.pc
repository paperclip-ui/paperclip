style canvas {
  background: rgb(231, 231, 231)
}

public component Canvas {
  render div(style: style, onMouseMove: onMouseMove, onScroll: onScroll, onWheelCapture: onWheelCapture) {
    style extends canvas {
      width: 100%
      height: 100%
      position: relative
      overflow: hidden
    }
    slot children
  }
}

public component Inner {
  render div(style: style, class: class) {
    style extends canvas {
      width: 100%
      height: 100%
    }
    slot children
  }
}