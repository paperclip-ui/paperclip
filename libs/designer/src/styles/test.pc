public component todoItem {
    variant checked
    render div todoItem {
        style {
            display: flex
            align-items: center
            gap: var(mod2.space05)
        }
        style variant checked {
            text-decoration: line-through
        }
        style variant other {
            color: red
        }
        style variant checked + other {
            font-size: 32px
        }
        div checkbox {
            style variant checked {
                background: var(mod2.blue02)
                height: 1em
                width: 1em
            }
            style {
                background: rgba(0, 0, 0, 0.1)
                height: 1em
                width: 1em
                border-radius: var(mod2.space02)
                position: relative
            }
            text "âœ“" {
                style variant checked {
                    display: block
                    font-size: 0.8em
                }
                style {
                    color: white
                    position: absolute
                    left: 50%
                    top: 50%
                    transform: translate(-50%, -50%)
                    font-size: 32px
                    display: none
                }
            }
        }
        slot children {
            text "Item"
        }
    }
}

