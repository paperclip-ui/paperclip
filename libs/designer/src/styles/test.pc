SlotB

public component TodoItem {
    variant mobile trigger {
        "@media screen and (max-width: 480px)"
    }
    variant alt trigger {
        ":nth-child(2n)"
    }
    variant dark trigger {
        ".dark"
        "@within(.dark)"
    }
    render div(onClick: onClick) {
        style variant mobile {
            font-size: 72px
        }
        style variant mobile + dark {
            transform: translateY(-20px)
        }
        style variant alt {
            background: grey
        }
        style variant dark {
            background: black
            color: white
        }
        style variant dark + alt {
            background: #333
        }
    }
}
