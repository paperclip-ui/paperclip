import "./editor.pc" as mod1
import "./theme.pc" as mod2

/**
 * @bounds(x: 701, y: -124, width: 168, height: 75)
*/

public component TodoItem {
    render div item {
        style {
            display: flex
            width: 100%
            gap: var(mod2.space03)
            align-items: center
            font-family: sans-serif
        }
        div checkbox {
            style {
                background: rgba(0, 0, 0, 0.1)
                width: 1em
                height: 1em
                border-radius: var(mod2.space01)
            }
        }
        slot children {
            text "todo item"
        }
    }
}

/**
 * @bounds(x: 208, y: -120, width: 443, height: 344)
*/

public component TodosApp {
    render div root {
        style {
            position: relative
            color: var(mod2.gray04)
            font-family: sans-serif
            background: white
            width: 100vw
            height: 100vh
            padding: var(mod2.space07)
            font-size: 14px
        }
        div container {
            style {
                left: 0px
                width: 190px
                margin: 0px auto
                height: 280px
                position: relative
                display: flex
                flex-direction: column
                top: 0px
            }
            div header {
                style {
                    padding: var(mod2.space04) 0px
                    font-size: var(mod2.fontSize06)
                }
                text "Todos"
            }
            div {
                style {
                    display: flex
                    gap: var(mod2.space05)
                    font-size: var(mod2.fontSize01)
                }
                input textInput {
                    style {
                        background: white
                        border: 1px solid var(mod2.gray02)
                        border-radius: var(mod2.space02)
                        width: 100%
                    }
                }
                button addButton {
                    style {
                        background: var(mod2.gray06)
                        color: white
                        border: none
                        border-radius: var(mod2.space02)
                        font-size: 12px
                    }
                    text "add" {
                        style {
                            font-size: var(mod2.fontSize01)
                        }
                    }
                }
            }
            div items {
                style {
                    display: flex
                    position: relative
                    align-items: center
                    gap: var(mod2.space05)
                    padding: var(mod2.space05) 0px
                }
                slot todos {
                    TodoItem
                }
            }
        }
    }
}

