            align-items: flex-start
            gap: var(mod.space03)
            cursor: pointer
        }
        Button {
            insert children {
                text "primary"
            }
        }
        Button {
            insert children {
                text "secondary"
            }
        }
        Button {
            insert children {
                text "warning (todo)"
            }
        }
        Button {
            insert children {
                text "danger (todo)"
            }
        }
    }
}

