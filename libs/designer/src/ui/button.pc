import "./theme.pc" as mod

/**
 * @frame(x: 576, y: 1023, width: 512, height: 215)
*/
public component Button {
    variant hover trigger {
        ":hover"
    }
    variant danger trigger {
        ".danger"
    }
    variant secondary trigger {
        ".secondary"
    }
    variant warning trigger {
        ".warning"
    }
    render button root(class: class) {
        style variant secondary + hover {
            background: rgba(133, 133, 133, 1)
        }
        style variant hover {
            background: rgba(43, 113, 255, 1)
        }
        style variant secondary {
            background: var(mod.gray02)
        }
        style variant danger {
            background: red
            color: maroon
        }
        style {
            position: relative
            background: var(mod.blue02)
            border: 0px
            border-radius: var(mod.space02)
            padding: var(mod.space04) var(mod.space06)
            color: var(mod.gray0)
            cursor: pointer
            transition: 0.2s
        }
        slot children {
            text "a button"
        }
    }
}

/**
 * @frame(x: 1158, y: 198, width: 486, height: 235)
*/
div preview {
    style {
