import "ui/theme.pc" as module

style grid {
    --stroke-width: 2px
    width: 100%
    height: 100%
    opacity: 0.3
    position: absolute
    top: 0px
    left: 0px
    filter: contrast(0)
    pointer-events: none
}

public component Pixels {
    render div(style: style) {
        style extends grid
    }
}
