      style {
        box-sizing: border-box
        display: inline-block
        padding-top: 8px
        padding-right: 12px
        padding-bottom: 8px
        padding-left: 12px
        height: 33px
      }
      override label {
        style {
          position: relative
          top: 2px
        }
      }
    }
    div optionsContainer {
      style {
        box-sizing: border-box
        display: none
        position: relative
      }
      style variant active {
        display: block
      }
      div options {
        style {
          box-sizing: border-box
          display: block
          position: absolute
        }
        slot items {
          MenuBarItemOption option2 {
            style {
              box-sizing: border-box
              display: block
            }
          }
          MenuBarItemOption option {
            style {
              box-sizing: border-box
              display: block
            }
          }
          MenuBarItemOption option3 {
            style {
              box-sizing: border-box
              display: block
            }
            override {
              variant hasCommand trigger { true }
            }
          }
          MenuBarItemOption option4 {
            style {
              box-sizing: border-box
              display: block
            }
          }
        }
      }
    }
  }
}

