#!/usr/bin/env node

const { pull } = require("../lib/cli");

require("yargs").command(
  "pull <target-directory>",
  "Download Zeplin design tokens into target directory",
  (yargs) => {
    yargs
      .option("personal-access-token", {
        description: "Zeplin personal access token",
        required: true,
      })
      .option("no-components", { description: "do not include components" })
      .option("project-id", {
        description: "ID of project that you'd like to sync",
      })
      .option("styleguide-id", {
        description: "ID of styleguide that you'd like to sync",
      });
  },
  (argv) => {
    pull({
      targetDirectory: argv.targetDirectory,
      personalAccessToken: argv.personalAccessToken,
      projectId: argv.projectId,
      styleguideId: argv.styleguideId,
      includeComponents: argv.components !== false,
    });
  }
).argv;
