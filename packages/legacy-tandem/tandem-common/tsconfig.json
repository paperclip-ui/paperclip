{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "lib": ["es2015.promise", "dom", "es5", "esnext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "lib",
    "jsx": "react"
  },
  "exclude": ["node_modules", "*-test", "lib", "index.d.ts"],
  "filesGlob": ["./src/**/*.ts"]
}
